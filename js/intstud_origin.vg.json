{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text":"Nationality of International Students",
        "align": "center",
        "baseline" : "middle",
        "fontSize": 17},
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "../js/ne_110m_admin_0_countries.topojson",
        "format": {
            "type": "topojson", "feature": "ne_110m_admin_0_countries"}  
    },
    "layer":[
        {
            "transform": [
                {
                    "calculate": "'There are no students from ' + datum.properties.NAME",
                    "as": "note" 
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {"tooltip": {"field": "note"}}
        },
        {
        "transform": [
        {

            "lookup": "properties.NAME", 
            "from": {
                "data": {
                    "url": "../data/intstudent_origin.csv"
                },
                "key": "country",
                "fields": ["Enrolments(%)","Enrolments"]

            }

        }

    ],
    "mark": {"type":"geoshape"},
    "encoding": {
        "color":{
            "field":"Enrolments(%)",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "scheme": "blues"
            },
            "title": "International Students(%)"
        },
        "tooltip":[
            {"field": "properties.NAME", 
            "type": "nominal", 
            "title": "Nationality"},

            {"field": "Enrolments",
            "type": "quantitative",
            "title": "Enrolments",
            "format":","
            },

            {"field": "Enrolments(%)",
            "type": "quantitative",
            "title": "Enrolments(%)"
            }
        ]
    }
    }
    ]
}
    
    
    
