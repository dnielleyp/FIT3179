{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": {
        "text": "Destination of International Students",
        "align": "center",
        "baseline" : "middle",
        "fontSize": 17},
    "projection": {"type": "equalEarth"},
    "layer" : [
        {
            "data": {
                "url": "js/ne_110m_admin_0_countries.topojson",
                "format" : {"type":"topojson","feature":"ne_110m_admin_0_countries"}
            },
            "mark": {"type":"geoshape","fill":"#EFDCCC","stroke":"white"}
        },
        {
            "data":{
                "url":"../data/intstudent_destination.csv"
            },
            "mark":{"type":"circle","tooltip": {"content":"data"},"color":"red","opacity":0.4},
            "encoding": {
                "longitude": {"field":"Longitude", "type": "quantitative"},
                "latitude": {"field":"Latitude", "type": "quantitative"},
                
                "size":{
                    "field": "Students(%)",
                    "type": "quantitative",
                    "title": "% of International Students"
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Students(%)", "type": "quantitative"}
                ]           
            }
        }

]
    
}
